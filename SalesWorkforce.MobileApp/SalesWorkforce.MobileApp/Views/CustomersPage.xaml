<?xml version="1.0" encoding="utf-8" ?>
<views:MobileContentPageBase x:Class="SalesWorkforce.MobileApp.Views.CustomersPage"
                             xmlns="http://xamarin.com/schemas/2014/forms"
                             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                             xmlns:aieffects="clr-namespace:AiForms.Effects;assembly=AiForms.Effects"
                             xmlns:i18n="clr-namespace:SalesWorkforce.MobileApp.Localization"
                             xmlns:prism="http://prismlibrary.com"
                             xmlns:views="clr-namespace:SalesWorkforce.MobileApp.Views"
                             prism:ViewModelLocator.AutowireViewModel="True"
                             BackgroundColor="{StaticResource SecondaryBackgroundColor}"
                             ControlTemplate="{StaticResource MasterDetailPageAddControlTemplate}">

    <views:MobileContentPageBase.Content>
        <Grid RowSpacing="0">
            <Grid Padding="25"
                  BackgroundColor="{StaticResource PrimaryBackgroundColor}">
                <CollectionView BackgroundColor="{StaticResource PrimaryBackgroundColor}"
                                ItemsSource="{Binding Customers}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="10"
                                           Orientation="Vertical" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Padding="10"
                                         BackgroundColor="{StaticResource SecondaryBackgroundColor}">
                                <StackLayout Spacing="5">
                                    <Label Style="{StaticResource ControlTitleLabelStyle}"
                                           Text="{x:Static i18n:AppResources.LabelName}" />

                                    <Label FontSize="{StaticResource LargeFontSize}"
                                           Style="{StaticResource ControlTitleLabelStyle}"
                                           Text="{Binding Name}"
                                           TextColor="{StaticResource PrimaryColor1}" />
                                </StackLayout>

                                <StackLayout Spacing="5">
                                    <Label Style="{StaticResource ControlTitleLabelStyle}"
                                           Text="{x:Static i18n:AppResources.LabelAddress}" />

                                    <Label FontSize="{StaticResource LargeFontSize}"
                                           MaxLines="1"
                                           Style="{StaticResource ControlTitleLabelStyle}"
                                           Text="{Binding Address}"
                                           TextColor="{StaticResource PrimaryColor1}" />
                                </StackLayout>

                                <Grid ColumnDefinitions="*,*"
                                      ColumnSpacing="5">
                                    <StackLayout Spacing="5">
                                        <Label Style="{StaticResource ControlTitleLabelStyle}"
                                               Text="{x:Static i18n:AppResources.LabelContactNumber}" />

                                        <Label FontSize="{StaticResource LargeFontSize}"
                                               MaxLines="1"
                                               Style="{StaticResource ControlTitleLabelStyle}"
                                               Text="{Binding ContactNumber}"
                                               TextColor="{StaticResource PrimaryColor1}" />
                                    </StackLayout>

                                    <StackLayout Grid.Column="1"
                                                 Spacing="5">
                                        <Label Style="{StaticResource ControlTitleLabelStyle}"
                                               Text="{x:Static i18n:AppResources.LabelEmailAddress}" />

                                        <Label FontSize="{StaticResource LargeFontSize}"
                                               MaxLines="1"
                                               Style="{StaticResource ControlTitleLabelStyle}"
                                               Text="{Binding Email}"
                                               TextColor="{StaticResource PrimaryColor1}" />
                                    </StackLayout>
                                </Grid>



                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Grid>
    </views:MobileContentPageBase.Content>
</views:MobileContentPageBase>